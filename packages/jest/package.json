{
  "name": "@firestore-emulator/jest",
  "version": "0.0.13",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs",
      "types": "./dist/*.d.ts"
    }
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/YutaUra/firestore-emulator.git",
    "directory": "packages/jest"
  },
  "bugs": {
    "url": "https://github.com/YutaUra/firestore-emulator/issues/new"
  },
  "keywords": [
    "firestore",
    "firestore emulator",
    "firebase",
    "firebase admin",
    "jest",
    "testing"
  ],
  "author": {
    "name": "Yuta Ura",
    "url": "http://github.com/YutaUra"
  },
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "build": "tsup ./src/ --sourcemap --clean --format esm,cjs --no-splitting && tsc"
  },
  "dependencies": {
    "@firestore-emulator/server": "workspace:*",
    "find-free-ports": "^3.1.1"
  },
  "devDependencies": {
    "@jest/environment": "^29.6.2",
    "@tsconfig/strictest": "^2.0.1",
    "@types/node": "20",
    "jest": "^29.6.2",
    "jest-environment-node": "^29.6.2",
    "tsup": "^7.2.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@jest/environment": "^29.6.2",
    "jest": "^29.6.2",
    "jest-environment-node": "^29.6.2"
  }
}
