{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "fix": {
      "dependsOn": ["^format", "^lint"]
    },
    "check": {
      "dependsOn": ["^format:check", "^lint:check", "^type:check"]
    },
    "format": {},
    "format:check": {},
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:check": {
      "dependsOn": ["^build"]
    },
    "type:check": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
