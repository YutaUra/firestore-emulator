{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "fix": {
      "dependsOn": ["^format", "lint"]
    },
    "check": {
      "dependsOn": ["^format:check", "lint:check"]
    },
    "format": {},
    "format:check": {},
    "lint": {},
    "lint:check": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
